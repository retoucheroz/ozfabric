datasource db {
  provider  = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// ==========================================
// NextAuth Required Models
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // === MODEON CUSTOM FIELDS ===
  credits         Int       @default(0)
  passwordHash    String?   @map("password_hash")
  role            String    @default("user")       // "admin" | "user"
  status          String    @default("active")     // "active" | "pending" | "disabled"
  authorizedPages String[]  @default([])           @map("authorized_pages")
  customTitle     String?   @map("custom_title")
  customLogo      String?   @map("custom_logo")
  authType        String    @default("credentials") @map("auth_type")  // "credentials" | "google"
  lastSeenAt      DateTime? @map("last_seen_at")
  lastSeenPage    String?   @map("last_seen_page")

  // === BILLING ===
  lemonCustomerId   String?  @unique @map("lemon_customer_id")
  subscriptionId    String?  @map("subscription_id")
  subscriptionPlan  String?  @map("subscription_plan")  // "pro" | "business" | null
  subscriptionStatus String? @map("subscription_status") // "active" | "cancelled" | "expired"

  // === RELATIONS ===
  accounts          Account[]
  sessions          Session[]
  creditTransactions CreditTransaction[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt       @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==========================================
// Modeon Business Models
// ==========================================

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  amount      Int
  description String?
  type        String   @default("adjustment") // "usage" | "deposit" | "purchase" | "subscription" | "adjustment"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@map("credit_transactions")
}

model LemonTransaction {
  id              String   @id @default(cuid())
  eventId         String   @unique @map("event_id")  // Lemon event ID for idempotency
  userId          String   @map("user_id")
  eventType       String   @map("event_type")        // "order_created" | "subscription_payment_success"
  variantId       String   @map("variant_id")
  creditsAdded    Int      @map("credits_added")
  amountPaid      Int      @map("amount_paid")        // cents
  currency        String   @default("USD")
  rawPayload      Json?    @map("raw_payload")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("lemon_transactions")
}

model AppSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("app_settings")
}